<div style="margin-top: 20px; margin-bottom: 42px;">
    <div class="col-12">
        <h4 class="title">
            Incident #@incidentId has been closed
        </h4>
    </div>
</div>

<div>
    <div class="row">
        <div class="col-4 offset-4 text-center">
            <div class="form-group">
                <label for="FullName" class="input-label-font" style="margin-bottom: 22px;">Reporter details <span style="font-size: 18px; display:inline-block;">(optional)</span></label>
                <input type="text" id="FullName" class="form-control form-input" placeholder="Full name" name="fullName" style="margin-bottom: 10px;">
            </div>
        </div>
    </div>

    <div class="row" style="margin-bottom: 36px;">
        <div class="col-4 offset-4 text-center">
            <div class="form-group">
                <input type="text" id="ContactDetails" class="form-control form-input" placeholder="Contact details" name="contactDetails">
            </div>
        </div>
    </div>

  <a href="/" class="btn btn-secondary btn-aqua rect-button-confirm incident-form-button mt-2"  @onclick="onConfirm">Done</a>

</div>

@code{
    [Parameter]
    public Func<Task> onConfirm {get; set;}

    public string incidentId = "202201013";
}